.bv-scroll-table {
  position: relative;
  width: 100%;
  height: 100%;
  color: #fff;
  .text {
    padding: 0 10px;
    box-sizing: border-box;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .header {
    display: flex;
    flex-direction: row;
    font-size: 15px;
    .header-item {
      padding: 0 10px;
      box-sizing: border-box;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      transition: all 0.3s;
    }
  }
  .rows {
    overflow: hidden;
    .row-item {
      display: flex;
      font-size: 14px;
      transition: all 0.3s;
    }
    .cell {
      padding: 0 10px;
      box-sizing: border-box;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    .index {
      border-radius: 3px;
      padding: 0 3px;
    }
  }
}
